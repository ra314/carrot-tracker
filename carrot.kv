<MainWidget>:

    cols: 3
    rows: 5

    # Defining text input in .kv
    # And giving it the look . pos and features
    TextInput:
        id: input_description
        hint_text:'Enter task description'
        size_hint: 0.95, 0.5
    Spinner:
        id: dropdown_category
        text: 'Select category'
        values: ('Career', 'Cleaning', 'Cooking', 'Health', 'Hygiene', 'Maintenance', 'Mental', 'Nutrition', 'Programming', 'Social', 'Study')
        size_hint: 0.95, 0.5
        #on_value:
        #    print: "The spinner {} has text {}".format(self, self.value)
    TextInput:
        id: input_num
        hint_text:'Enter number (n)'
        size_hint: 0.95, 0.5
    TextInput:
        id: input_date
        hint_text:'Enter date'
        size_hint: 0.95, 0.5
    TextInput:
        id: input_blacklist_categories
        hint_text:'Enter blacklisted categories \nSeparate categories by commas'
        size_hint: 0.95, 0.5
    TextInput:
        id: input_task_index
        hint_text: 'Enter task index (i)'
        size_hint: 0.95, 0.5

    Button:
        text: 'Add task \n(args = description, category, n = carrots)'
        on_press: root.add_task()
        size_hint: 0.95, 0.5
    Button:
        text: 'Tasks done on date \n(args = date) \n(default date is today)'
        on_press: root.print_tasks_on_day()
        size_hint: 0.95, 0.5
    Button:
        text: 'XP earned in last n days \n(args = number) \n(default n = 7)'
        on_press: root.xp_in_last_x_days()
        size_hint: 0.95, 0.5
    Button:
        text: 'Last n tasks \n(args = description, category, number) \n(default n = 7)'
        on_press: root.last_x_tasks()
        size_hint: 0.95, 0.5
    Button:
        text: 'Find task by index \n(args = task index) \n(default is latest task)'
        on_press: root.find_task_by_index()
        size_hint: 0.95, 0.5
    Button:
        text: 'Edit task \n(args = description, category, number, task index)'
        on_press: root.edit_task_by_index()
        size_hint: 0.95, 0.5
    Button:
        text: 'Autocomplete task \n(args = description)'
        on_press: root.autocomplete_task()
        size_hint: 0.95, 0.5
